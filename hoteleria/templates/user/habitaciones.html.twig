{% extends 'base.html.twig' %}

{% block body %}
<div class="hotel-list">
<main class="reserve-container">
{% include 'header.html.twig' %}

    <h2>Selecciona tu Habitacion</h2>
    {% for key, h in habitaciones %}
    <form action="{{ path('reservar_habitacion') }}" method="POST">
        <div class="hotel-card">
            <img src="/images/hotel1.jpg">
            <div class="hotel-info">
                <h3>Numero: {{h.numero}}</h3>
                <p>Capacidad {{h.cantPersonas}} personas</p>
                <p>Precio: ${{h.precio}}</p>
                <input type="hidden" name="idHabitacion" value={{h.id}}>                
                <input type="hidden" name="fechaDesde" value={{filtro.fechaDesde}}>                
                <input type="hidden" name="fechaHasta" value={{filtro.fechaHasta}}>                
                <button type="submit" class="btn-primary">Reservar</button>
            </div>
        </div>
    </form>
    {% endfor %}
</div>
</main>
<footer>
    Contacto: info@calmreserve.com | Tel: +123456789<br>
    Política de privacidad | Términos y condiciones
</footer>
{% endblock %}
