{% extends 'base.html.twig' %}

{% block body_class %}user-page{% endblock %}

{% block body %}
<header>
    <h1>CALM RESERVE</h1>
    <nav>
        <a href="#">Consultar disponibilidad</a>
        <a href="#">Reservar una habitación</a>
        <a href="#">Cancelar Reserva</a>
        <a href="#">Reseña de habitación</a>
        <a href="#" class="active">Administrar perfil</a>
        <a href="#">Cerrar Sesión</a>
    </nav>
</header>

<main>
    <div class="profile-container">
        <h2>Administrar Perfil</h2>
        <form action="#" method="POST">
            <div class="form-group">
                <label for="name">Nombre:</label>
                <input type="text" id="name" name="name" value="Ezequiel">
            </div>
            <div class="form-group">
                <label for="email">Correo Electrónico:</label>
                <input type="email" id="email" name="email" value="ezequiel@gmail.com">
            </div>
            <div class="form-group">
                <label for="phone">Teléfono:</label>
                <input type="tel" id="phone" name="phone" value="+123456789">
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password">
            </div>
            <div class="form-actions">
                <button type="submit" class="btn-primary">Guardar Cambios</button>
                <a href="/user" class="btn-secondary">Ir a Inicio</a>
            </div>
        </form>
    </div>
</main>

<footer>
    Contacto: info@calmreserve.com | Tel: +123456789<br>
    Política de privacidad | Términos y condiciones
</footer>
{% endblock %}
